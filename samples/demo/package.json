{
  "name": "demo",
  "version": "1.0.0",
  "description": "This application is used to demonstrate Radius basics as part of our 'first application' tutorial.",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:client": "node build-client.js",
    "build:server": "rimraf ./dist && rimraf ./www && tsc",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "node start-client.js",
    "start:server": "npm run build && node dist/main.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.8",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@azure/monitor-opentelemetry": "^1.4.0",
    "@dapr/dapr": "^3.3.1",
    "@types/mongodb": "^4.0.7",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.8",
    "bootstrap": "^5.3.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "mongodb": "^6.5.0",
    "morgan": "^1.10.0",
    "redis": "^4.6.13",
    "uuid": "^9.0.1"
  }
}
